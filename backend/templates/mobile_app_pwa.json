{
  "id": "mobile-app-pwa",
  "name": "Progressive Web App (PWA)",
  "description": "Modern Progressive Web App with offline capabilities, push notifications, and native-like mobile experience. Works across all devices and platforms.",
  "category": "mobile",
  "difficulty": "intermediate",
  "estimatedTime": "3 hours",
  "features": [
    "Progressive Web App (PWA)",
    "Offline functionality",
    "Push notifications",
    "App-like navigation",
    "Touch gestures support",
    "Camera & file access",
    "Location services",
    "Background sync",
    "Install prompts",
    "Responsive design",
    "Service workers",
    "App manifest",
    "Performance optimization",
    "Cross-platform compatibility"
  ],
  "icon": "Smartphone",
  "tags": ["pwa", "mobile", "offline", "notifications", "responsive", "cross-platform"],
  "access_tier": "basic",
  "popular": true,
  "featured": true,
  "downloads": 2800,
  "rating": 4.6,
  "tech_stack": ["React", "TypeScript", "Next.js", "Service Workers", "Web Push API", "IndexedDB", "Tailwind CSS"],
  "base_files": [
    {
      "path": "package.json",
      "content": {
        "name": "{{project_name}}",
        "version": "1.0.0",
        "private": true,
        "scripts": {
          "dev": "next dev",
          "build": "next build",
          "start": "next start",
          "lint": "next lint"
        },
        "dependencies": {
          "next": "^14.0.0",
          "react": "^18.0.0",
          "react-dom": "^18.0.0",
          "typescript": "^5.0.0",
          "@types/node": "^20.0.0",
          "@types/react": "^18.0.0",
          "@types/react-dom": "^18.0.0",
          "tailwindcss": "^3.0.0",
          "next-pwa": "^5.6.0",
          "workbox-webpack-plugin": "^7.0.0"
        }
      }
    },
    {
      "path": "public/manifest.json",
      "content": {
        "name": "{{project_name}}",
        "short_name": "{{project_name}}",
        "description": "{{project_name}} Progressive Web App",
        "start_url": "/",
        "display": "standalone",
        "background_color": "#ffffff",
        "theme_color": "#000000",
        "icons": [
          {
            "src": "/icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png"
          },
          {
            "src": "/icon-512x512.png", 
            "sizes": "512x512",
            "type": "image/png"
          }
        ]
      }
    }
  ],
  "structure": {
    "pages": [
      {
        "name": "Home",
        "sections": ["app-header", "main-content", "navigation-bar"]
      },
      {
        "name": "Camera",
        "sections": ["camera-view", "photo-gallery", "image-editor"]
      },
      {
        "name": "Offline",
        "sections": ["cached-content", "sync-status", "offline-actions"]
      },
      {
        "name": "Settings",
        "sections": ["notification-settings", "app-preferences", "storage-management"]
      }
    ],
    "components": [
      "PWAInstallPrompt",
      "OfflineDetector",
      "PushNotifications",
      "CameraCapture",
      "TouchGestures",
      "LocationTracker",
      "BackgroundSync",
      "AppNavigation",
      "StorageManager",
      "UpdatePrompt"
    ]
  }
}
